<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.matrix" name="[COLOR limegreen]Matrix[/COLOR]Wizard" version="1.0" provider-name="dundas56">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="script.module.requests" />
        <import addon="script.module.six" />
        <import addon="script.kodi.android.update" optional="true" version="1.1.7" />
        <import addon="script.speedtester" optional="true" version="1.1.2" />
    </requires>

    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
    </extension>

    <extension point="xbmc.service" library="startup.py" start="startup" />

    <extension point="xbmc.addon.metadata">
        <summary lang="en">[COLOR limegreen]Matrix[/COLOR]Wizard</summary>
        <description lang="en">[COLOR limegreen]Matrix[/COLOR]Wizard offers many maintenance features, selective add-on data saving, and automated build installs.</description>
        <platform>all</platform>
        <reuselanguageinvoker>false</reuselanguageinvoker>
        <source>https://www.github.com/a4k-openproject/plugin.program.openwizard/</source>

        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.png</fanart>
        </assets>
    </extension>
</addon>

<addon id="repository.matrix" name="Matrix Repository" version="1.0" provider-name="dundas56">
    <extension point="xbmc.addon.repository" name="Matrix Repository">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/dundas56/repository.matrix/master/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/dundas56/repository.matrix/master/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/dundas56/repository.matrix/master/zips/</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Matrix Repository</summary>
        <description>The only repository you'll need for KODI</description>
        <disclaimer></disclaimer>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
</addons>
